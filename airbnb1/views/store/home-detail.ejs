<%- include('../partials/head') %>
<style>
  .detail-container {
    max-width: 1000px;
    margin: 2rem auto;
    padding: 0 1.5rem;
  }

  .back-link {
    display: inline-block;
    margin-bottom: 2rem;
    color: #1f6feb;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }

  .back-link:hover {
    color: #145bd3;
    text-decoration: underline;
  }

  .home-detail {
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    overflow: hidden;
  }

  .home-detail h2 {
    font-size: 2rem;
    color: #1f6feb;
    margin: 0 0 1.5rem 0;
    padding: 2rem 2rem 0 2rem;
  }

  .detail-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    padding: 0 2rem 2rem 2rem;
  }

  .detail-image {
    height: 400px;
    border-radius: 12px;
    overflow: hidden;
  }

  .detail-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .detail-info {
    display: flex;
    flex-direction: column;
  }

  .detail-info > p {
    margin: 0.75rem 0;
    color: #333;
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .detail-info strong {
    color: #1f6feb;
  }

  .description {
    color: #666;
    margin: 1.5rem 0 !important;
    line-height: 1.8;
    font-size: 1rem;
    padding: 1.5rem;
    background: #f8f8f8;
    border-radius: 8px;
    border-left: 4px solid #1f6feb;
  }

  .booking-form {
    background: #f8f8f8;
    padding: 1.5rem;
    border-radius: 8px;
    margin: 1.5rem 0;
  }

  .date-inputs {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .date-inputs input {
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 6px;
    font-size: 0.95rem;
  }

  .date-inputs input:focus {
    outline: none;
    border-color: #1f6feb;
    box-shadow: 0 0 0 3px rgba(31, 111, 235, 0.1);
  }

  .booking-actions {
    display: flex;
    gap: 1rem;
  }

  .btn-primary {
    flex: 1;
    background: #1f6feb;
    color: #fff;
    border: none;
    padding: 0.75rem 1rem;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s;
  }

  .btn-primary:hover {
    background: #145bd3;
  }

  .btn-secondary {
    flex: 1;
    background: transparent;
    color: #1f6feb;
    border: 2px solid #1f6feb;
    padding: 0.75rem 1rem;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-secondary:hover {
    background: #1f6feb;
    color: #fff;
  }

  @media (max-width: 768px) {
    .detail-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .detail-image {
      height: 300px;
    }

    .home-detail h2 {
      font-size: 1.6rem;
    }

    .home-detail {
      padding: 1rem;
    }

    .detail-grid {
      padding: 0;
    }

    .date-inputs {
      grid-template-columns: 1fr;
    }

    .booking-actions {
      flex-direction: column;
    }
  }
</style>
</head>
<body>
  <%- include('../partials/nav') %>
  <div class="detail-container">
    <a href="/homes" class="back-link">‚Üê Back to all homes</a>
    
    <div class="home-detail">
      <h2><%= home.housename %></h2>
      <div class="detail-grid">
        <div class="detail-image">
          <% const img = home.photourl || home.imageUrl; %>
          <% if (img) { %>
            <img src="<%= img %>" alt="<%= home.housename %>" onerror="this.onerror=null;this.src='/images/placeholder.svg'">
          <% } else { %>
            <img src="/images/placeholder.svg" alt="placeholder">
          <% } %>
        </div>
        <div class="detail-info">
          <% if (home.description) { %>
            <p class="description">üìù <%= home.description %></p>
          <% } %>

          <p><strong>üìç Location:</strong> <%= home.location || 'Not specified' %></p>
          <p><strong>üí∞ Price:</strong> 
            <% if (home.price) { %>
              $<%= home.price %>
            <% } else { %>
              N/A
            <% } %> 
            per night
          </p>
          
          <% if (home.rooms) { %>
            <p><strong>üõèÔ∏è Rooms:</strong> <%= home.rooms %></p>
          <% } %>
          
          <% if (home.host) { %>
            <p><strong>üë§ Host:</strong> <%= home.host %></p>
          <% } %>

          <div class="booking-form">
            <h3 style="margin-top: 0; color: #333;">Book This Property</h3>
            <form action="/book-home" method="POST">
              <input type="hidden" name="homeId" value="<%= home._id %>">
              <input type="hidden" name="price" value="<%= home.price %>">
              
              <div class="date-inputs">
                <div>
                  <label style="display: block; margin-bottom: 0.5rem; font-weight: 600; font-size: 0.9rem;">Check-in</label>
                  <input type="date" name="checkInDate" required>
                </div>
                <div>
                  <label style="display: block; margin-bottom: 0.5rem; font-weight: 600; font-size: 0.9rem;">Check-out</label>
                  <input type="date" name="checkOutDate" required>
                </div>
              </div>

              <div class="booking-actions">
                <button type="submit" class="btn-primary">üéâ Book Now</button>
                
                <form action="/favourites" method="POST" style="flex: 1;">
                  <input type="hidden" name="id" value="<%= home._id %>">
                  <button type="submit" class="btn-secondary" style="width: 100%;">‚ô• Add to Favourites</button>
                </form>
              </div>
            </form>
          </div>
        </div>
      
      </div>
    </div>
  </div>
    
</body>
</html>