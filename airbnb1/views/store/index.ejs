<%- include('../partials/head') %>
<style>
  .hero-section {
    background: linear-gradient(135deg, #1f6feb 0%, #145bd3 100%);
    color: #fff;
    padding: 4rem 2rem;
    text-align: center;
    border-radius: 8px;
    margin-bottom: 3rem;
  }

  .hero-section h1 {
    font-size: 2.8rem;
    margin: 0 0 1rem 0;
    font-weight: 700;
  }

  .hero-section p {
    font-size: 1.2rem;
    margin: 0;
    opacity: 0.95;
  }

  .homes-grid h2 {
    font-size: 2rem;
    color: #1f6feb;
    margin: 0 0 2rem 0;
    text-align: center;
  }

  .home-card {
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    border: 1px solid #e5e5e5;
    transition: transform 0.2s, box-shadow 0.2s;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .home-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .home-image {
    height: 200px;
    overflow: hidden;
  }

  .home-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .home-card h3 {
    margin: 0;
    color: #1f6feb;
    font-size: 1.2rem;
  }

  .home-card > div {
    padding: 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .home-card > div > div {
    font-size: 0.85rem;
    color: #666;
    margin: 0.5rem 0;
  }

  .home-card p {
    margin: 1rem 0 0 0;
    color: #555;
    font-size: 0.9rem;
    line-height: 1.5;
    flex: 1;
  }

  .home-actions {
    display: flex;
    gap: 0.75rem;
    margin-top: auto;
    padding-top: 1rem;
  }

  .btn-primary {
    flex: 1;
    background: #1f6feb;
    color: #fff;
    padding: 0.6rem 1rem;
    border-radius: 6px;
    text-decoration: none;
    text-align: center;
    font-weight: 500;
    border: none;
    cursor: pointer;
    transition: background 0.2s;
  }

  .btn-primary:hover {
    background: #145bd3;
    text-decoration: none;
  }

  .btn-secondary {
    flex: 1;
    background: transparent;
    color: #1f6feb;
    border: 2px solid #1f6feb;
    padding: 0.6rem 1rem;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 500;
    transition: all 0.2s;
  }

  .btn-secondary:hover {
    background: #1f6feb;
    color: #fff;
  }

  .card-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .no-homes {
    text-align: center;
    padding: 3rem 2rem;
    background: #f8f8f8;
    border-radius: 12px;
    color: #666;
  }

  @media (max-width: 768px) {
    .hero-section {
      padding: 3rem 1.5rem;
    }

    .hero-section h1 {
      font-size: 2rem;
    }

    .hero-section p {
      font-size: 1rem;
    }

    .card-container {
      grid-template-columns: 1fr;
    }

    .home-actions {
      flex-direction: column;
      gap: 0.5rem;
    }

    .btn-primary,
    .btn-secondary {
      width: 100%;
    }
  }
</style>
</head>
<body>
  <%- include('../partials/nav') %>

  <main>
    <section class="hero-section">
      <h1>üåç Welcome to Airbnb</h1>
      <p>Find your perfect home away from home</p>
    </section>

    <section class="homes-grid">
      <h2>Featured Properties</h2>

      <% if (registeredHomes && registeredHomes.length > 0) { %>

        <div class="card-container">
          <% registeredHomes.forEach(function(home) { %>
            <div class="home-card">
              <div class="home-image">
                <% const photoUrl = home.imageUrl || home.photourl; %>
                <% if (photoUrl) { %>
                  <img src="<%= photoUrl %>" alt="<%= home.housename %>" referrerpolicy="no-referrer">
                <% } else { %>
                  <img src="/images/placeholder.svg" alt="placeholder">
                <% } %>
              </div>

              <div>
                <h3><%= home.housename %></h3>

                <% if (home.description) { %>
                  <p><%= home.description.substring(0, 80) %>...</p>
                <% } %>

                <div>üìç <strong>Location:</strong> <%= home.location || 'Not specified' %></div>

                <div>üí∞ <strong>Price:</strong>
                  <% if (home.price) { %>
                    $<%= home.price %>
                  <% } else { %>
                    N/A
                  <% } %>
                  per night
                </div>

                <% if (home.rooms) { %>
                  <div>üõèÔ∏è <strong>Rooms:</strong> <%= home.rooms %></div>
                <% } %>

                <% if (home.host) { %>
                  <div>üë§ <strong>Host:</strong> <%= home.host %></div>
                <% } %>

                <div class="home-actions">
                  <a href="/homes/<%= home._id %>" class="btn-primary">View Details</a>
                  <form action="/favourites" method="POST" style="flex: 1;">
                    <input type="hidden" name="id" value="<%= home._id %>">
                    <button type="submit" class="btn-secondary">‚ô• Add to Favourites</button>
                  </form>
                </div>
              </div>
            </div>
          <% }); %>
        </div>

      <% } else { %>
        <div class="no-homes">
          <p>No homes registered yet. Check back soon!</p>
        </div>
      <% } %>
    </section>
  </main>
</body>
</html>
