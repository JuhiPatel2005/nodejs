<%- include('../partials/head') %>
<style>
  .homes-header {
    text-align: center;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #e5e5e5;
  }

  .homes-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: #1f6feb;
  }

  .homes-subtitle {
    color: #666;
    font-size: 1.1rem;
  }

  .home-card {
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    border: 1px solid #e5e5e5;
    transition: transform 0.2s, box-shadow 0.2s;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .home-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .home-image-wrapper {
    height: 200px;
    overflow: hidden;
  }

  .home-image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .home-card h3 {
    margin: 0;
    color: #1f6feb;
    font-size: 1.2rem;
  }

  .home-card > div {
    padding: 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .home-card > div > div:first-child {
    font-size: 0.85rem;
    color: #666;
    margin: 0.75rem 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .home-card p {
    margin: 1rem 0 0 0;
    color: #555;
    font-size: 0.9rem;
    line-height: 1.5;
    flex: 1;
  }

  .home-actions {
    display: flex;
    gap: 0.75rem;
    margin-top: auto;
    padding-top: 1rem;
  }

  .btn-details {
    flex: 1;
    background: #1f6feb;
    color: #fff;
    padding: 0.6rem 1rem;
    border-radius: 6px;
    text-decoration: none;
    text-align: center;
    font-weight: 500;
    transition: background 0.2s;
  }

  .btn-details:hover {
    background: #145bd3;
    text-decoration: none;
  }

  .btn-fav {
    flex: 1;
    background: transparent;
    color: #1f6feb;
    border: 2px solid #1f6feb;
    padding: 0.6rem 1rem;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 500;
    transition: all 0.2s;
  }

  .btn-fav:hover {
    background: #1f6feb;
    color: #fff;
  }

  .card-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  @media (max-width: 768px) {
    .homes-header h1 {
      font-size: 2rem;
    }

    .card-container {
      grid-template-columns: 1fr;
    }

    .home-card > div {
      padding: 1rem;
    }

    .home-actions {
      flex-direction: column;
      gap: 0.5rem;
    }

    .btn-details,
    .btn-fav {
      width: 100%;
    }
  }
</style>
</head>
<body>
  <%- include('../partials/nav') %>
  <main>
    <section class="homes-header">
      <h1>ğŸ  Available Homes</h1>
      <p class="homes-subtitle">Find your perfect stay</p>
    </section>

    <div class="card-container">
      <% registeredHomes.forEach(home => { %>
        <div class="home-card">
          <div class="home-image-wrapper">
            <% const photoUrl = home.imageUrl || home.photourl; %>
            <% if (photoUrl) { %>
              <img src="<%= photoUrl %>" alt="<%= home.housename %>" onerror="this.onerror=null;this.src='/images/placeholder.svg'">
            <% } else { %>
              <img src="/images/placeholder.svg" alt="placeholder">
            <% } %>
          </div>
          <div>
            <h3><%= home.housename %></h3>
            <% if (home.description) { %>
              <p><%= home.description.substring(0, 80) %>...</p>
            <% } %>
            <div>ğŸ“ <strong>Location:</strong> <%= home.location || 'Not specified' %></div>
            <div>ğŸ’° <strong>Price:</strong> <% if (home.price) { %>$<%= home.price %><% } else { %>N/A<% } %> per night</div>
            <% if (home.rooms) { %>
              <div>ğŸ›ï¸ <strong>Rooms:</strong> <%= home.rooms %></div>
            <% } %>
            <% if (home.host) { %>
              <div>ğŸ‘¤ <strong>Host:</strong> <%= home.host %></div>
            <% } %>
            <div class="home-actions">
              <a href="/homes/<%= home._id %>" class="btn-details">View Details</a>
              <form action="/favourites" method="POST" style="flex: 1;">
                <input type="hidden" name="id" value="<%= home._id %>">
                <button type="submit" class="btn-fav">â™¥ Add to Favourites</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </main>
    
</body>
</html>