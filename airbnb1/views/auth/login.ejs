  <%- include('../partials/head') %>
  <style>
    .form-container {
      max-width: 700px;
      margin: 2rem auto;
      padding: 0 1.5rem;
    }

    .form-header {
      text-align: center;
      margin-bottom: 3rem;
    }

    .form-header h1 {
      font-size: 2.2rem;
      color: #1f6feb;
      margin-bottom: 0.5rem;
      font-weight: 600;
    }

    .form-header p {
      color: #666;
      font-size: 1rem;
    }

    .edit-form {
      background: #fff;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
      border: 1px solid #e5e5e5;
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    .form-group:last-child {
      margin-bottom: 0;
    }

    .form-group label {
      display: block;
      font-weight: 600;
      color: #333;
      margin-bottom: 0.5rem;
      font-size: 0.95rem;
    }

    .form-group input,
    .form-group textarea {
      width: 100%;
      padding: 0.75rem 1rem;
      border: 1px solid #ddd;
      border-radius: 6px;
      font-size: 0.95rem;
      font-family: inherit;
      transition: border-color 0.3s, box-shadow 0.3s;
    }

    .form-group input:focus,
    .form-group textarea:focus {
      outline: none;
      border-color: #1f6feb;
      box-shadow: 0 0 0 3px rgba(31, 111, 235, 0.1);
    }

    .form-group textarea {
      resize: vertical;
      min-height: 120px;
    }

    .form-hint {
      font-size: 0.85rem;
      color: #999;
      margin-top: 0.35rem;
    }

    .form-actions {
      display: flex;
      gap: 1rem;
      margin-top: 2rem;
      padding-top: 2rem;
      border-top: 1px solid #f0f0f0;
    }

    .btn-submit {
      flex: 1;
      background: #1f6feb;
      color: #fff;
      border: none;
      padding: 0.75rem 1.5rem;
      border-radius: 6px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.2s;
    }

    .btn-submit:hover {
      background: #145bd3;
    }

    .btn-submit:active {
      transform: scale(0.98);
    }

    .btn-cancel {
      flex: 1;
      background: transparent;
      color: #666;
      border: 1px solid #ddd;
      padding: 0.75rem 1.5rem;
      border-radius: 6px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
    }

    .btn-cancel:hover {
      background: #f5f5f5;
      color: #333;
    }

    .preview-section {
      margin-top: 2rem;
      padding-top: 2rem;
      border-top: 1px solid #f0f0f0;
    }

    .preview-title {
      font-weight: 600;
      color: #333;
      margin-bottom: 1rem;
      font-size: 0.95rem;
    }

    .preview-card {
      background: #f8f8f8;
      padding: 1.5rem;
      border-radius: 8px;
      border: 1px solid #e5e5e5;
    }

    .preview-card h3 {
      color: #1f6feb;
      margin: 0 0 0.5rem 0;
      font-size: 1.2rem;
    }

    .preview-card p {
      color: #666;
      margin: 0.5rem 0;
      font-size: 0.95rem;
    }

    .input-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1.5rem;
    }

    @media (max-width: 768px) {
      .form-container {
        padding: 0 1rem;
      }

      .form-header h1 {
        font-size: 1.8rem;
      }

      .edit-form {
        padding: 1.5rem;
      }

      .input-row {
        grid-template-columns: 1fr;
        gap: 0;
      }

      .form-actions {
        flex-direction: column;
      }

      .btn-submit,
      .btn-cancel {
        width: 100%;
      }
    }
  </style>
  </head>
  <body>
    <%- include('../partials/nav') %>
    
    <div class="form-container">
      <div class="form-header">
        <h1>Login</h1>
      </div>

      <form action="/login" method="POST" class="edit-form">
        
        <div class="input-row">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="text"
              name="username"
              placeholder="email/username"
              required
            />
          </div>

          <br>

          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              name="password"
              placeholder="Enter your password"
              required
            />
          </div>
          <br>

          <div class="form-actions">
            <button type="submit" class="btn-submit">Login</button>
            <a href="/register" class="btn-cancel">Don't have an account? Register</a>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
